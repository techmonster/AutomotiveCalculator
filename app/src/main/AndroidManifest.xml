<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.dtcc.nhollowa.automotivecalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- MAIN ACTIVITY CLASS: INPUT THE CAR PURCHASE INFORMATION -->
        <activity
            android:name=".PurchaseActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SECONDARY ACTIVITY CLASS: CAR LOAN REPORT -->
        <activity
            android:name=".LoanSummaryActivity"
            android:label="@string/app_name"
            android:parentActivityName=".PurchaseActivity" />

    </application>

</manifest>
